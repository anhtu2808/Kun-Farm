@page
@model IndexModel
@{
    ViewData["Title"] = "KunFarm Dashboard";
}

<!-- Hero Section -->
<div class="relative bg-gradient-to-r from-farm-green to-farm-blue rounded-2xl p-8 md:p-12 mb-8 overflow-hidden">
    <div class="absolute inset-0 bg-black opacity-10 rounded-2xl"></div>
    <div class="relative z-10 text-white">
        <div class="max-w-4xl">
            <h1 class="text-4xl md:text-6xl font-bold mb-4">
                <i class="fas fa-seedling mr-4 text-farm-yellow"></i>
                KunFarm Dashboard
            </h1>
            <p class="text-xl md:text-2xl mb-6 opacity-90">
                Welcome to the smart farm management system
            </p>
            <p class="text-lg opacity-80 mb-8">
                A comprehensive system providing full APIs for Unity 2D games and modern management tools
            </p>
            <div class="flex flex-col sm:flex-row gap-4">
                <a href="/leaderboard" class="bg-farm-yellow hover:bg-farm-yellow/90 text-gray-900 px-6 py-3 rounded-lg font-semibold transition-all duration-200 transform hover:scale-105 flex items-center justify-center">
                    <i class="fas fa-trophy mr-2"></i>
                    View Leaderboard
                </a>
                <a href="/swagger" class="bg-white/20 hover:bg-white/30 backdrop-blur-sm border border-white/30 text-white px-6 py-3 rounded-lg font-semibold transition-all duration-200 transform hover:scale-105 flex items-center justify-center">
                    <i class="fas fa-code mr-2"></i>
                    API Documentation
                </a>
            </div>
        </div>
    </div>
    <!-- Decorative elements -->
    <div class="absolute top-4 right-4 text-farm-yellow opacity-20">
        <i class="fas fa-tractor text-6xl"></i>
    </div>
    <div class="absolute bottom-4 right-8 text-farm-yellow opacity-20">
        <i class="fas fa-wheat-awn text-4xl"></i>
    </div>
</div>

<!-- Main Features Grid -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
    <!-- Admin Panel Card -->
    <div class="bg-white rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-300 overflow-hidden group">
        <div class="bg-gradient-to-r from-red-500 to-red-600 p-4">
            <h3 class="text-xl font-bold text-white flex items-center">
                <i class="fas fa-users-cog mr-3"></i>
                Admin Management
            </h3>
        </div>
        <div class="p-6">
            <p class="text-gray-600 mb-4">Manage users, statistics and system configuration</p>
            <ul class="space-y-2 mb-6">
                <li class="flex items-center text-gray-700">
                    <i class="fas fa-check text-green-500 mr-2"></i>
                    User management
                </li>
                <li class="flex items-center text-gray-700">
                    <i class="fas fa-check text-green-500 mr-2"></i>
                    System statistics
                </li>
                <li class="flex items-center text-gray-700">
                    <i class="fas fa-check text-green-500 mr-2"></i>
                    Edit player state
                </li>
                <li class="flex items-center text-gray-700">
                    <i class="fas fa-check text-green-500 mr-2"></i>
                    Activate/deactivate accounts
                </li>
            </ul>
            <a href="/admin/users" class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-lg font-semibold transition-colors duration-200 transform group-hover:scale-105 inline-flex items-center">
                <i class="fas fa-arrow-right mr-2"></i>
                Access Admin Panel
            </a>
        </div>
    </div>

    <!-- Leaderboard Card -->
    <div class="bg-white rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-300 overflow-hidden group">
        <div class="bg-gradient-to-r from-farm-yellow to-yellow-500 p-4">
            <h3 class="text-xl font-bold text-gray-900 flex items-center">
                <i class="fas fa-trophy mr-3"></i>
                Leaderboard
            </h3>
        </div>
        <div class="p-6">
            <p class="text-gray-600 mb-4">View player rankings based on money earned</p>
            <ul class="space-y-2 mb-6">
                <li class="flex items-center text-gray-700">
                    <i class="fas fa-coins text-farm-yellow mr-2"></i>
                    Top richest players
                </li>
                <li class="flex items-center text-gray-700">
                    <i class="fas fa-chart-line text-farm-blue mr-2"></i>
                    Real-time statistics
                </li>
                <li class="flex items-center text-gray-700">
                    <i class="fas fa-trophy text-orange-500 mr-2"></i>
                    Achievement tracking
                </li>
                <li class="flex items-center text-gray-700">
                    <i class="fas fa-users text-green-500 mr-2"></i>
                    Player profiles
                </li>
            </ul>
            <a href="/leaderboard" class="bg-farm-yellow hover:bg-yellow-500 text-gray-900 px-4 py-2 rounded-lg font-semibold transition-colors duration-200 transform group-hover:scale-105 inline-flex items-center">
                <i class="fas fa-arrow-right mr-2"></i>
                View Rankings
            </a>
        </div>
    </div>

    <!-- API Documentation Card -->
    <div class="bg-white rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-300 overflow-hidden group">
        <div class="bg-gradient-to-r from-farm-blue to-blue-600 p-4">
            <h3 class="text-xl font-bold text-white flex items-center">
                <i class="fas fa-code mr-3"></i>
                API Documentation
            </h3>
        </div>
        <div class="p-6">
            <p class="text-gray-600 mb-4">Complete API documentation for developers</p>
            <ul class="space-y-2 mb-6">
                <li class="flex items-center text-gray-700">
                    <i class="fas fa-check text-green-500 mr-2"></i>
                    Authentication API
                </li>
                <li class="flex items-center text-gray-700">
                    <i class="fas fa-check text-green-500 mr-2"></i>
                    Game State API
                </li>
                <li class="flex items-center text-gray-700">
                    <i class="fas fa-check text-green-500 mr-2"></i>
                    Shop & Inventory API
                </li>
                <li class="flex items-center text-gray-700">
                    <i class="fas fa-check text-green-500 mr-2"></i>
                    Leaderboard API
                </li>
            </ul>
            <a href="/swagger" class="bg-farm-blue hover:bg-blue-600 text-white px-4 py-2 rounded-lg font-semibold transition-colors duration-200 transform group-hover:scale-105 inline-flex items-center">
                <i class="fas fa-arrow-right mr-2"></i>
                View Documentation
            </a>
        </div>
    </div>
</div>
